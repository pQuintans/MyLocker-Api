{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "trailingCommas": "off",
        "prettier/prettier": [
          "error",
          {
            "semi": false,
            "singleQuote": true,
            "arrowParens": "avoid",
            "trailingCommas": "none",
            "tabWidth": 2,
            "jsxSingleQuote": true,
            "endOfLine": "crlf"
          }
        ],
        "space-before-function-paren": "off",
        "eol-last": ["error", "always"]
    }
}
